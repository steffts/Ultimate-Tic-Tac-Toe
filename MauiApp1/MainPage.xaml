                    </Grid>
                </ContentView>
                <ContentView Grid.Row="1" Grid.Column="1" x:Name="SmallGrid_1_1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
