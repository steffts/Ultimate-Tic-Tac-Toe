            <Label Grid.Row="1" 
                       Text="Играч на ход: X" 
                       x:Name="CurrentPlayerLabel" 
                       FontSize="18" 
                       HorizontalOptions="Center" />

            <Button Text="Рестартирай играта"
                Clicked="OnResetGameClicked"
                HorizontalOptions="Center"
                VerticalOptions="End" />


            

        </Grid>
    </ContentPage.Content>
</ContentPage>

